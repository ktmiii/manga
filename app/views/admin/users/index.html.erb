<h4 class="pt-3">
  <i class="fas fa-users"></i>
  会員一覧
</h4>
<table class='table table-hover table-inverse'>
    <thead>
     <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
     </tr>
    </thead>
  <tbody>
    <% @users.each do |user| %>
     <tr>
       <td><%= user.id %></td>
       <td><%= link_to user.user_name,admin_user_path(user) %></td>
       <td><%= user.email %></td>
       <td><%= user.is_deleted ? '退会' : '有効' %></td>
     </tr>
    <% end %>
  </tbody>
 </table>
  <%= paginate @users %>
