<h4>
  <i class="fas fa-comments"></i>
   レビュー一覧
</h4>
<table class='table table-hover table-inverse'>
    <thead>
     <tr>
      <th>作成日時</th>
      <th>ユーザーネーム</th>
      <th>レビュー内容</th>
     </tr>
    </thead>
  <tbody>
    <% @reviews.each do |review| %>
     <tr>
       <td><%= link_to review.created_at.strftime("%Y/%m/%d %H:%M:%S"),admin_review_path(review) %></td>
       <td><%= review.user.user_name %></td>
       <td><%= truncate(review.content, length: 30, omission: "[...]") %></td>
     </tr>
    <% end %>
  </tbody>
 </table>
  <%= paginate @reviews %>
