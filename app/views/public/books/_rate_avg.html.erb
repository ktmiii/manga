<script>
  <% if review.present? %>
    $('#star-rate-<%= review.id %>').empty();
    $('#star-rate-<%= review.id %>').raty({
      size: 36,
      starOff: '<%= asset_path('star-off.png') %>',
      starOn: '<%= asset_path('star-on.png') %>',
      half: false,
      readOnly: true,
      score: <%= "#{review.rate.to_f.round(1)}" %>,
    });
  <% else %>
    $('#star-rate').empty();
    $('#star-rate').raty({
      size: 36,
      starOff: '<%= asset_path('star-off.png') %>',
      starOn: '<%= asset_path('star-on.png') %>',
      half: false,
      readOnly: true,
      score: 0,
    });
  <% end %>
</script>
