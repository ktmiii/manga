<% if user_signed_in? %>
  <% if book.bookmarked_by?(current_user) %>
    <p>
      <%= link_to book_bookmarks_path(book), method: :delete, remote: true do %>
        <i class="fas fa-bookmark"></i>
        <small>ブックマークを外す</small>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to book_bookmarks_path(book), method: :post, remote: true do %>
        <i class="far fa-bookmark"></i>
        <small>ブックマークする</small>
      <% end %>
    </p>
  <% end %>
<% else %>
  <i class="far fa-bookmark"></i>
  <small>ブックマークする</small>
<% end %>
  