<div class="ml-2 mb-5 pl-3 review-color">
  <h4>
    <i class="fas fa-comments"></i>
    レビュー一覧ページ
  </h4>
</div>
<div class="row">
  <% reviews.each_slice(3) do |reviews| %>
    <div class="row">
     <% reviews.each do |review| %>
      <div class="col-md-4 my-2">
       <div class="square-box border rounded c enter-block px-4 mx-auto">
        <div class="row">
          <div class="col-4">
            <div>
                <%= image_tag review.book.image_url + "?_ex=100x100" %>
            </div>
            <div>
              <%= review.book.reviews.count %>件のレビュー
            </div>
          </div>
          <div class="col-8">
              <strong class="text-dark"><%= review.book.title %></strong>
            <p id="star-rate-<%= review.id %>"></p>
          </div>
          <div class="btn btn-warning">
            <%= link_to new_review_path, class:"text-dark" do %>
              レビューする
            <% end %>
          </div>
        </div>
       </div>
      </div>
     <% end %>
    </div>
   </div>
  <% end %>
</div>