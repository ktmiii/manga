<div class="text-center title mt-3">
  <h2><i class="far fa-comment"></i>新着レビュー</h2>
</div>
  <div class="swiper mx-auto pt-3">
    <div class="swiper-wrapper">
      <% @reviews.each_with_index do |review, index| %>
        <div class="swiper-slide">
          <div class="top-new-review">
            <div class="top-new-review person-info col-sm-3">
              <div>
                <%= image_tag review.user.get_profile_image(80,80), class: "rounded-circle" %><br>
                <strong><%= review.user.user_name %></strong><br>
                <%= review.user.age_group %>/
                <%= review.user.gender_i18n %>
              </div>
            </div>
            <div class="top-new-review-box border border-rounded col-sm-9">
              <div class="top-new-review book-product d-inline text-center p-2 m-2">
                <%= link_to book_path(review.book), style: "height:120px;" do %>
                  <%= image_tag review.book.image_url + "?_ex=120x120", class: 'img-fluid' %>
                <% end %><br>
                <%= link_to book_path(review.book), class: 'd-block' do %>
                  <small class="text-dark"><%= truncate(review.book.title, length: 10, omission: "[...]") %></small>
                <% end %>
              </div>
              <div class="top-new-review book-review">
                <p id="star-rate-<%= review.id %>"></p>
                <div>
                  <%= review.content %>
                </div>
                <div class="pb-2">
                  <small class="d-inline-block"><%= review.created_at&.strftime("%Y年%m月%d日") %></small>
                  <%= render 'public/reviews/review_like', review:review %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <script>
          $('#star-rate-<%= review.id %>').empty();
           $('#star-rate-<%= review.id%>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  half      : false,
                  readOnly: true,
                  score: <%= review.rate %>,
                });
        </script>
      <% end %>
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
  <script>
    const swiper = new Swiper('.swiper', {
    speed: 900,
    slidesPerView: '1',
    effect: "fade",
    loop: true,
    autoplay: {
      delay: 3200,
      disableOnInteraction: false,
    },
    fadeEffect: {
      crossFade: true
    },

    pagination: {
      el: '.swiper-pagination',
    },

    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    }
    });
  </script>
